{
  "name": "HN post comments sorted",
  "version": "1.1",
  "icons": {
    "48": "logo_48.png",
    "96": "logo_96.png",
    "128": "logo_128.png"
  },
  "description": "Sort HN post comments by date.",
  "content_scripts": [{
    "matches": ["https://news.ycombinator.com/*"],
    "js": ["contentscript.js"]
  }],
  "permissions": [
    "https://hn.algolia.com/"
  ],
  "content_security_policy": "script-src 'self' https://hn.algolia.com; object-src 'self'"
}
